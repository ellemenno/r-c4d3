<?xml version="1.0" encoding="UTF-8"?>

<project name="r-c4d3.shared.targets" default="-usage" basedir="./">

<description>
Common targets available to all the build files in the r-c4d3 project.
</description>
	
	<target name="-usage"> <!-- not providing description to avoid showing up in -projecthelp -->
		<echo message="${ant.project.name}" />
		<java classname="org.apache.tools.ant.Main">
			<arg value="-projecthelp" />
		</java>
	</target>
	
	<target name="help" description="prints usage info" depends="-usage">
		<echo message="user.name : ${user.name}" />
		<echo message="user.home : ${user.home}" />
	</target>

	<target name="versions" description="prints runtime versions of project tools">
		<echo message="OS     : ${os.name} ${os.version} (${os.arch})" />
		
		<echo message="Ant    : ${ant.version}" />
		
		<echo message="Java   : Version ${java.version} " />
		
		<exec executable="${FLEX_HOME}/bin/mxmlc${cli}" failonerror="true" outputproperty="flex.version"><arg line="-version"/></exec>
		<echo message="Flex   : ${flex.version}" />
	</target>

</project>
